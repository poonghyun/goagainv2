<div class="image-background-container sign-up">
	<div class="inner-form-container">
		<h1>Sign Up</h1>

		<% if flash[:errors] %>
			<div class="alert alert-danger alert-dismissible" role="alert">
			   <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
			<%= flash[:errors].join("<br>").html_safe %>
			</div>
		<% end %>

		<form action="/users" method="post" role="form">
		  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		  
		  <div class="form-group">
			  <label for="username">Username</label>
			  <input id="username" class="form-control" name="user[username]" type="text">
		  </div>

		  <div class="form-group">
			  <label for="password">Password</label>
			  <input id="password" class="form-control" name="user[password]" type="password">
			 </div>

		  <input type="submit" value="Submit" class="btn btn-success">
		</form>
	</div>
</div>