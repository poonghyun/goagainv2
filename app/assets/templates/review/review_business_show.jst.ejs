<div class="review-business row">
  <% if(review.get('user').id === review.get('current_user_id')) { %>
  	<h4 class="text-center">You said</h4>
  <% } else { %>
	  <h4 class="text-center"><a href="#/user/<%= review.get('user')['id'] %>"><%= review.get('user')['username'] %></a> says</h4>
	<% } %>

	<div class="col-xs-6 business-review-left">

		<div class="business-review-star-date">
			<div class="rateit" data-rateit-value="<%= review.get('stars') %>" data-rateit-ispreset="true" data-rateit-readonly="true"></div>
			<div class="business-review-date"><%= (new Date(review.get('updated_at'))).toDateString() %></div>
		</div>

		<p class="business-review-content">"<%= review.escape('content') %>"</p>

		<p class="business-review-go-again">Go again? <b><%= review.get('go_again') ? "Yes" : "No" %></b></p>

	</div>

	<div class="col-xs-6">

		<div class="business-review-thumbnails row">
			<% review.photos().each(function(photo) { %>
				<div class="col-xs-4">
					<a href="#photo<%= photo.id %>" class="thumbnail business-thumbnail-link">
						<img src="<%= photo.get('fp_url') %>">
					</a>
				</div>
			<% }) %>
		</div>

		<% review.photos().each(function(photo) { %>
			<div id="photo<%= photo.id %>" class="lightbox hide fade"  tabindex="-1" role="dialog" aria-hidden="true">
				<div class='lightbox-content'>
					<img src="<%= photo.get('fp_url') %>">
				</div>
			</div>
		<% }) %>

	</div>

</div>