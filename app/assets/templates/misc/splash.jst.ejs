<div class="jumbotron splash-header">
  <h1>Find what you're looking for</h1>
</div>

<div class="categories">
  <% var categories = ["Bars & Nightlife", "Restaurants", "Coffee & Tea", "Arts & Entertainment", "Shopping", "Hotels & Travel", "Beauty & Spas", "Bakeries", "Food Carts", "Gyms", "Health & Medical", "Home Services"] %>

  <div class="category-nav">
    <% categories.forEach(function(category) { %>
      <div class="category-link-container">
        <a href="#/cat/<%= category.replace(/ /g,'') %>"><%= category %></a>
      </div>
    <% }); %>
  </div>

  <div class="category-results"></div>

</div>

<div class="recent-reviews">
  <div class="recent-review-list">

  </div>
  <div class="text-center">
    <a href="#" class="get-more-reviews">Load more reviews</a>
  </div>
</div>